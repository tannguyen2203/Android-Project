<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="204dp"
        android:background="@color/cornflowerblue">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="127dp"
            android:background="@color/cornflowerblue"
            android:paddingTop="24dp"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed"
            app:toolbarId="@+id/toolbar">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/cornflowerblue" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/cornflowerblue"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/tv_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="171dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="15dp"
                        android:background="@color/cornflowerblue"
                        android:text="Login"
                        android:textColor="@color/white" />

                    <TextView
                        android:layout_width="116dp"
                        android:layout_height="45dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="7dp"
                        android:layout_marginTop="-1dp"
                        android:text="Discover"
                        android:textColor="#fff"
                        android:textSize="24dp" />

                    <ImageView
                        android:id="@+id/cart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="6dp"
                        android:src="@drawable/ic_baseline_shopping_cart_24" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="15dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="70dp"
                        android:background="@color/cornflowerblue"
                        android:text="Tủ lạnh"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/tv_logout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="305dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="12dp"
                        android:background="@color/cornflowerblue"
                        android:text="Logout"
                        android:textColor="@color/white"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="15dp"
                        android:layout_marginLeft="100dp"
                        android:layout_marginTop="70dp"
                        android:layout_toEndOf="@+id/textView3"
                        android:background="@color/cornflowerblue"
                        android:text="Máy lạnh"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="15dp"
                        android:layout_marginLeft="170dp"
                        android:layout_marginTop="70dp"
                        android:layout_toEndOf="@+id/textView4"
                        android:background="@color/cornflowerblue"
                        android:text="Điện tử"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="15dp"
                        android:layout_marginLeft="170dp"
                        android:layout_marginTop="70dp"
                        android:layout_toEndOf="@+id/textView6"
                        android:background="@color/cornflowerblue"
                        android:text="Máy giặt"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="15dp"
                        android:layout_marginLeft="240dp"
                        android:layout_marginTop="70dp"
                        android:layout_toEndOf="@+id/textView5"
                        android:background="@color/cornflowerblue"
                        android:text="Gia dụng"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="15dp"
                        android:layout_marginLeft="310dp"
                        android:layout_marginTop="70dp"
                        android:layout_toEndOf="@+id/textView7"
                        android:background="@color/cornflowerblue"
                        android:text="TV"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="43dp"
                        android:layout_marginLeft="310dp"
                        android:layout_marginTop="70dp"
                        android:layout_toEndOf="@+id/textView7"
                        android:background="@color/cornflowerblue"
                        android:text="All"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="43dp"
                        android:layout_marginLeft="310dp"
                        android:layout_marginTop="70dp"
                        android:layout_toEndOf="@+id/textView7"
                        android:background="@color/cornflowerblue"
                        android:text="All"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="25dp"
                        android:layout_marginLeft="310dp"
                        android:layout_marginTop="43dp"
                        android:layout_toEndOf="@+id/textView7"
                        android:background="@color/cornflowerblue"
                        android:text="Sort"
                        android:textColor="@color/white" />

                </RelativeLayout>
            </LinearLayout>
        </com.google.android.material.appbar.CollapsingToolbarLayout>

        <EditText
            android:id="@+id/searchText"
            android:layout_width="298dp"
            android:layout_height="38dp"
            android:background="@color/white" />

        <Button
            android:id="@+id/searchButton"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="Search"/>



    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="535dp"
        android:layout_marginTop="0dp"
        android:background="@color/white"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="2"
            android:orientation="horizontal"
            android:rowCount="2"
            tools:context=".MainActivity">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_marginStart="10dp"
                android:layout_marginTop="400dp"
                android:background="@color/white" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_marginTop="360dp"
                android:text="Sản phẩm mới nhất"
                android:textColor="@color/red"
                android:textSize="20dp" />

            <ViewFlipper
                android:id="@+id/viewFlipper"
                android:layout_width="match_parent"
                android:layout_height="145dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_marginTop="0dp"
                android:background="@color/yellow">

            </ViewFlipper>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_marginTop="150dp"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" android:src="@drawable/sale">
                    </ImageView>
                </RelativeLayout>
            </LinearLayout>

        </GridLayout>

    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_marginTop="700dp"
        android:background="@color/cornflowerblue"
        android:padding="20dp">

        <ImageView
            android:id="@+id/homePage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:src="@drawable/ic_baseline_home_work_24" />

        <ImageView
            android:id="@+id/profileLoginDetail"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="200dp"
            android:src="@drawable/ic_baseline_perm_identity_24"
            />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

